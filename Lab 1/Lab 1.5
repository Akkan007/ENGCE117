#include <stdio.h>

void GetMatrix( int value[], int *row, int *col ) {
    int i, r, c;

    printf("Enter number of rows : ");
    scanf("%d", &r);

    printf("Enter number of columns : ");
    scanf("%d", &c);

    *row = r;
    *col = c;

    printf("Enter matrix values (%d elements):\n", r * c);
    for(i = 0; i < r * c; i++) {
        scanf("%d", &value[i]);
    }
}

int main() {
    int data[100], m, n;

    GetMatrix( data, &m, &n );

    printf("\nMatrix (%d x %d):\n", m, n);
    for(int i = 0; i < m; i++) {
        for(int j = 0; j < n; j++) {
            printf("%d ", data[i*n + j]);
        }
        printf("\n");
    }

    return 0;
}
