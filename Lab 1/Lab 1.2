#include <stdio.h>
#include <stdlib.h> 
void GetSet( int **pData, int *pNum ) {
    int n, i;

   
    printf("Enter the number of elements (N): ");
    if (scanf("%d", &n) != 1 || n < 0) {
        *pNum = 0;
        *pData = NULL;
        return;
    }
    *pNum = n;
    *pData = (int *)malloc(n * sizeof(int));
    
    if (*pData == NULL) {
        printf("Memory allocation failed!\n");
        *pNum = 0;
        return;
    }

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        printf("Element [%d]: ", i + 1);
        if (scanf("%d", &(*pData)[i]) != 1) {
        
            break; 
        }
    }
}

int main() {
    int *data; 
    int num;   

    GetSet( &data, &num ); 

    printf("\n--- Data received in main ---\n");
    if (data != NULL && num > 0) {
        printf("Number of elements (num): %d\n", num);
        printf("Elements: ");
        for (int i = 0; i < num; i++) {
            printf("%d ", data[i]);
        }
        printf("\n");
        
        free(data);
    } else if (num == 0) {
        printf("No elements were entered or memory allocation failed.\n");
    }

    return 0;
}
